@model ConfyCreationsSalesSystem.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="h3 mb-0">Dashboard</h1>
        <p class="text-muted">Welcome to Confy Creations Sales Management System</p>
    </div>
</div>

<div class="row">
    <!-- Quick Stats -->
    <div class="col-md-4">
        <div class="card stat-card dashboard-card">
            <div class="card-body">
                <div class="stat-number text-primary">@Model.TotalProducts</div>
                <div class="stat-label">Total Products</div>
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-sm mt-3">
                    <i class="bi bi-eye"></i> View Products
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card dashboard-card">
            <div class="card-body">
                <div class="stat-number text-success">@Model.TodaySalesSummary.TotalSalesCount</div>
                <div class="stat-label">Today's Sales</div>
                <a asp-controller="Sales" asp-action="Record" class="btn btn-outline-success btn-sm mt-3">
                    <i class="bi bi-plus-circle"></i> Record New Sale
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card dashboard-card">
            <div class="card-body">
                <div class="stat-number text-warning">$@Model.TodaySalesSummary.TotalRevenue.ToString("F2")</div>
                <div class="stat-label">Today's Revenue</div>
                <a asp-controller="Sales" asp-action="Daily" class="btn btn-outline-warning btn-sm mt-3">
                    <i class="bi bi-bar-chart"></i> View Details
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center mb-3">
                        <a asp-controller="Products" asp-action="Create" class="text-decoration-none">
                            <div class="p-4 border rounded bg-light">
                                <i class="bi bi-plus-circle display-4 text-primary"></i>
                                <h5 class="mt-3">Add Product</h5>
                                <p class="text-muted small">Add new product to inventory</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <a asp-controller="Sales" asp-action="Record" class="text-decoration-none">
                            <div class="p-4 border rounded bg-light">
                                <i class="bi bi-cart-plus display-4 text-success"></i>
                                <h5 class="mt-3">Record Sale</h5>
                                <p class="text-muted small">Record new customer sale</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <a asp-controller="Products" asp-action="Index" class="text-decoration-none">
                            <div class="p-4 border rounded bg-light">
                                <i class="bi bi-box display-4 text-info"></i>
                                <h5 class="mt-3">View Products</h5>
                                <p class="text-muted small">Browse all products</p>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-3 text-center mb-3">
                        <a asp-controller="Sales" asp-action="Daily" class="text-decoration-none">
                            <div class="p-4 border rounded bg-light">
                                <i class="bi bi-calendar-check display-4 text-warning"></i>
                                <h5 class="mt-3">Daily Report</h5>
                                <p class="text-muted small">View today's sales summary</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Today's Sales Summary (@DateTime.Today.ToString("MMMM dd, yyyy"))</h5>
            </div>
            <div class="card-body">
                @if (Model.TodaySalesSummary.TotalSalesCount > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Time</th>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Total Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sale in Model.TodaySalesSummary.Sales)
                                {
                                    <tr>
                                        <td>@sale.SaleDate.ToString("hh:mm tt")</td>
                                        <td>@sale.ProductName</td>
                                        <td>@sale.Quantity</td>
                                        <td>$@sale.UnitPrice.ToString("F2")</td>
                                        <td class="fw-bold">$@sale.TotalAmount.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-dark">
                                <tr>
                                    <td colspan="4" class="text-end">Total Revenue:</td>
                                    <td class="fw-bold">$@Model.TodaySalesSummary.TotalRevenue.ToString("F2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-cart-x display-1 text-muted"></i>
                        <h4 class="mt-3">No sales today yet</h4>
                        <p class="text-muted">Start recording sales to see them here.</p>
                        <a asp-controller="Sales" asp-action="Record" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Record First Sale
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>